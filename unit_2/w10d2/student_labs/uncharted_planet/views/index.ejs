<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://code.jquery.com/jquery-3.5.0.min.js"
        integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ=" crossorigin="anonymous"></script>
    <script src="/public/app.js"></script>
</head>
<style>
    body {
        margin: 0 auto;
        text-align: center;
    }
    .container {
        display: flex;
        flex-flow: row wrap;
        align-content: center;
        justify-content: center;
    }
    .container > * {
        flex: 0 1 auto;
        width: 200px;
        border: 1px solid black;
    }
</style>

<body>
    <h1>index page of planets</h1>
    <nav>
        <a href="/planets">Home</a>
    </nav>
        <a href="/planets/new">Create New</a>
    </nav>
    <div class="container header">
        <% dataKeys.forEach((el,index)=> {%>
        <h2><%=el %></h2>
        <%})%>
        <h2> </h2>
        <h2> </h2>
    </div>
        <% data.forEach((el,index) => {%>
            <div class="container body" id="index">
                <h3><%=el.name%></h3>
                <h3><%=el.description%></h3>
                <h3><%=el.duration%></h3>
                <h3><%=el.location%></h3>
                <h3><%=el.crew%></h3>
                <form action="/planets/<%=index%>?_method=DELETE" method="POST">
                    <input type="submit" value="DELETE">
                </form>
                <a href="/planets/<%=index%>/edit">EDIT</a>
            </div>
        <%})%>

</body>
</html>